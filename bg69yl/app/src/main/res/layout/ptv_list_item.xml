<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:background="@color/background_floating_material_light">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageTV"
        android:src="@drawable/noimage"
        android:layout_marginLeft="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="Name"
        android:id="@+id/nameTV"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/descriptionTV"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Location"
        android:id="@+id/locationTV"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/imageTV"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Description"
        android:id="@+id/descriptionTV"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/nameTV"
        android:layout_toEndOf="@+id/imageTV" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Price"
        android:id="@+id/priceTV"
        android:layout_alignTop="@+id/curSymbollist"
        android:layout_toEndOf="@+id/curSymbollist" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Geo-Location"
        android:id="@+id/geolocationTV"
        android:layout_below="@+id/locationTV"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rank"
        android:id="@+id/rankTV"
        android:layout_marginRight="5dp"
        android:singleLine="false"
        android:layout_above="@+id/descriptionTV"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rank:"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/rankTV"
        android:layout_toStartOf="@+id/rankTV" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Â£"
        android:id="@+id/curSymbollist"
        android:layout_below="@+id/locationTV"
        android:layout_alignStart="@+id/locationTV" />


</RelativeLayout>